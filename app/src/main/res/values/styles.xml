<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="single_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#f5f5f5</item>
    </style>
    <!--首页通知条目的style-->
    <style name="HomeNotifyLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/btn_white_ripple</item>
        <item name="android:minHeight">@dimen/_40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--首页文字的style-->
    <style name="HomeNotifyText">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/_15dp</item>
        <item name="android:textColor">@color/_959595</item>
    </style>
    <!--首页小红点的样式-->
    <style name="HomeRedPoint">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">@dimen/_15dp</item>
        <item name="android:layout_height">@dimen/_15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/zhang_shape_red_point</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">1</item>
        <item name="android:layout_marginLeft">@dimen/_10dp</item>
        <item name="android:textSize">@dimen/_10sp</item>
    </style>
    <!--首页更多箭头的样式-->
    <style name="HomeMoreImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/youjiant</item>
        <item name="android:layout_marginRight">@dimen/_15dp</item>
    </style>
    <!--报警通知内容描述的标题style-->
    <style name="AlarmContentTitle">
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginLeft">@dimen/_15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">@color/_9f9f9f</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--报警通知内容描述的详情style-->
    <style name="AlarmContentDetail">
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">@color/_f6706d</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 首页图文混排的style-->
    <style name="ImageAndTextContainer">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">95dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--首页图文混排中文字的style-->
    <style name="HomeTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_15dp</item>
        <item name="android:textColor">@color/_464646</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>
    <!--tab字体的大小-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">17sp</item>
    </style>

    <!--添加任务界面标题的样式-->
    <style name="AddTaskTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/dp_14</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--添加任务界面内容的样式-->
    <style name="AddTaskContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--白色条目的样式-->
    <style name="ItemHorizontalStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">44dp</item>
    </style>
    <!--带图片的textView的样式-->
    <style name="TextViewAndDrawable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">@color/_010101</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">@dimen/_12dp</item>
        <item name="android:layout_marginLeft">@dimen/_15dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/light_gray</item>
    </style>
    <!-- 任务详情界面文字的style-->
    <style name="TaskDetailText">
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <!-- 补卡详情界面文字的style-->
    <style name="CardDetailText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>
</resources>
