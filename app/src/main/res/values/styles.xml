<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="single_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#f5f5f5</item>
    </style>
    <!--首页通知条目的style-->
    <style name="HomeNotifyLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/btn_white_ripple</item>
        <item name="android:minHeight">@dimen/_40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--首页文字的style-->
    <style name="HomeNotifyText">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/_15dp</item>
        <item name="android:textColor">@color/_959595</item>
    </style>
    <!--首页小红点的样式-->
    <style name="HomeRedPoint">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">@dimen/_15dp</item>
        <item name="android:layout_height">@dimen/_15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/zhang_shape_red_point</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">1</item>
        <item name="android:layout_marginLeft">@dimen/_10dp</item>
        <item name="android:textSize">@dimen/_10sp</item>
    </style>
    <!--首页更多箭头的样式-->
    <style name="HomeMoreImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/youjiant</item>
        <item name="android:layout_marginRight">@dimen/_15dp</item>
    </style>
</resources>
