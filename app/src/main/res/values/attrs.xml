<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--进度条加载完成后才显示界面-->
    <declare-styleable name="ProgressLayout">
        <attr name="progressBackground" format="color" />
        <attr name="progress" format="boolean" />
    </declare-styleable>

    <!--app菜单-->
    <declare-styleable name="MainMenuItemView">
        <attr name="menuSelectedImage" format="reference" />
        <attr name="menuUnselectedImage" format="reference" />
        <attr name="menuText" format="string" />
        <attr name="menuSelectedColor" format="color"></attr>
        <attr name="menuUnselectedColor" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="TabContainerViewStyle">
        <attr name="tabTextSize" format="dimension" />
        <attr name="tabTextColor" format="color" />
        <attr name="selectedTextColor" format="color" />
        <attr name="drawablePadding" format="dimension" />
        <attr name="iconHeight" format="dimension" />
        <attr name="iconWidth" format="dimension" />
        <attr name="divideLineColor" format="color" />
        <attr name="divideLineHeight" format="dimension" />
    </declare-styleable>
    <!--  导航栏头部属性 -->
    <declare-styleable name="MyToolBar">
        <attr name="leftBtnIcon" format="reference" />
        <attr name="rightBtnIcon" format="reference" />
        <attr name="leftText" format="string" />
        <attr name="rightText" format="string" />
        <attr name="titleText" format="string" />
    </declare-styleable>


    <declare-styleable name="MyOccupy">
        <attr name="imgBtnIcon" format="reference" />
        <attr name="textText" format="string" />
        <attr name="commitText" format="string" />
    </declare-styleable>

    <declare-styleable name="ImageAndText">
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:text" />
        <attr name="android:src" />
        <attr name="imageMarginTop" format="dimension|reference"/>
        <attr name="textMarginTop" format="dimension|reference" />
        <attr name="textMarginBottom" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="SwipeMenuView">
        <attr name="swipeEnable" format="boolean"/>
        <attr name="ios" format="boolean"/>
        <attr name="leftSwipe" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="AttendanceButton">
        <attr name="ring_bg_color" format="color|reference"/>
        <attr name="ring_color" format="color|reference" />
        <attr name="ring_size" format="dimension" />
        <attr name="circle_color" format="color|reference" />
        <attr name="content_text" format="string" />
        <attr name="content_text_color" format="color|reference" />
        <attr name="content_text_size" format="dimension" />
        <attr name="current_time_text_size" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="space" format="dimension" />
        <attr name="narrow_down" format="dimension" />
    </declare-styleable>
</resources>
