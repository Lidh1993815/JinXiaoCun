<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sp"
        android:layout_marginTop="@dimen/_13dp"
        android:layout_marginBottom="@dimen/_13dp"
        android:text="第一周销量"
        android:layout_marginLeft="@dimen/_13dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toLeftOf="@+id/iv_more"
        android:layout_marginRight="@dimen/_14dp"
        android:text="300"
        android:layout_centerVertical="true"
        style="@style/MiddleGrayLightText"/>
    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="19dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/xiajiant"
        android:layout_centerVertical="true"/>
</RelativeLayout>