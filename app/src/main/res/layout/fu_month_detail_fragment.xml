<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_eeeeee"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/ItemHorizontalStyle"
        android:gravity="center_vertical">

        <TextView
            style="@style/AddTaskTitleStyle"
            android:text="库存数量" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15dp"
            style="@style/MiddleGrayLightText"
            android:text="100" />
    </RelativeLayout>
    <RelativeLayout
        style="@style/ItemHorizontalStyle"
        android:layout_marginTop="@dimen/line_height_size"
        android:gravity="center_vertical">
        <TextView
            style="@style/AddTaskTitleStyle"
            android:text="库存日均销量" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15dp"
            style="@style/MiddleGrayLightText"
            android:text="50" />
    </RelativeLayout>
    <RelativeLayout
        style="@style/ItemHorizontalStyle"
        android:layout_marginTop="@dimen/line_height_size"
        android:gravity="center_vertical">
        <TextView
            style="@style/AddTaskTitleStyle"
            android:text="库存日均销量" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15dp"
            style="@style/MiddleGrayLightText"
            android:text="50" />
    </RelativeLayout>
    <RelativeLayout
        style="@style/ItemHorizontalStyle"
        android:layout_marginTop="@dimen/line_height_size"
        android:gravity="center_vertical">

        <TextView
            style="@style/AddTaskTitleStyle"
            android:text="库存可售天数" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15dp"
            style="@style/MiddleGrayLightText"
            android:text="3" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15dp"
        android:layout_marginBottom="@dimen/_15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            style="@style/MinGrayLightText"
            android:text="库存预警可售天数下限：2"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_14dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/MinGrayLightText"

            android:text="库存预警可售天数上限：10"
            android:layout_marginRight="@dimen/_14dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
