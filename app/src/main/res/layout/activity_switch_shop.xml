<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qianmo.jinxiaocun.fu.activity.SwitchShopActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44dp"
        android:background="@color/white"
        android:gravity="center"
        android:minHeight="@dimen/_44dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/edit_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_marginRight="@dimen/_15dp"
            android:layout_marginTop="@dimen/_8dp"
            android:background="@drawable/fu_edit_search_bg_shape"
            android:minHeight="@dimen/_30dp"
            android:orientation="horizontal">

            <EditText
                android:maxLines="1"
                android:id="@+id/et_search_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10dp"
                android:background="@null"
                android:imeOptions="actionNone"
                android:drawableLeft="@mipmap/sous03"
                android:drawablePadding="@dimen/_8dp"
                android:hint="@string/please_input_shop_name"
                android:textColor="@color/black"
                android:textColorHint="@color/_9f9f9f"
                android:textSize="@dimen/_13sp" />
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>
