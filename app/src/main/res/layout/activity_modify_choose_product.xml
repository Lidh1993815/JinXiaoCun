<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_eeeeee"
    android:orientation="vertical"
    tools:context="com.qianmo.jinxiaocun.fu.activity.ModifyChooseProductActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="85dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView82"
            style="@style/ModdleBlackText"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:text="商品名称"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView83"
            style="@style/MinGrayLightText"
            android:layout_marginLeft="11dp"
            android:text="（商品编号）"
            app:layout_constraintBottom_toBottomOf="@+id/textView82"
            app:layout_constraintStart_toEndOf="@+id/textView82" />

        <TextView
            android:id="@+id/textView84"
            style="@style/MinGrayLightText"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:text="规格型号：156748418"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView82" />

        <TextView
            android:id="@+id/textView85"
            style="@style/MinGrayLightText"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:text="销售价：50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView84" />

        <TextView
            android:id="@+id/textView86"
            style="@style/MinGrayLightText"
            android:layout_marginLeft="75dp"
            android:text="库存：20"
            app:layout_constraintBottom_toBottomOf="@+id/textView85"
            app:layout_constraintStart_toEndOf="@+id/textView85" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:minHeight="@dimen/_80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ModdleBlackText"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/_12dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/kuang"
                android:drawablePadding="11dp"
                android:text="@string/sales_by_normal" />

            <TextView
                style="@style/ModdleBlackText"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/_12dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/kuang"
                android:drawablePadding="11dp"
                android:text="@string/sales_by_promotion" />
        </LinearLayout>

        <TextView
            style="@style/ModdleBlackText"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginTop="17dp"
            android:drawableLeft="@mipmap/kuang"
            android:drawablePadding="11dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:text="@string/sales_by_promotion" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:minHeight="@dimen/_44dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/sales_price"
            android:textSize="@dimen/_14sp"
            style="@style/MiddleBlackText"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/_15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:background="@null"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:minHeight="@dimen/_44dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/num"
            android:textSize="@dimen/_14sp"
            style="@style/MiddleBlackText"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/_15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:background="@null"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
