<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_shop_name"
        style="@style/AddTaskTitleStyle"
        android:layout_marginLeft="@dimen/_16dp"
        android:layout_marginTop="@dimen/_14dp"
        android:text="门店0" />

    <TextView
        android:id="@+id/purchase_order_id"
        style="@style/MinGrayLightText"
        android:layout_below="@+id/tv_shop_name"
        android:layout_marginLeft="@dimen/_16dp"
        android:layout_marginTop="@dimen/_10dp"
        android:text="进货单据：2132534563456754"
         />

    <TextView
        style="@style/MinGrayLightText"
        android:layout_below="@+id/purchase_order_id"
        android:layout_marginLeft="@dimen/_16dp"
        android:layout_marginTop="@dimen/_10dp"
        android:text="2017-09-26    15:00"
        android:layout_marginBottom="@dimen/_15dp"
        android:id="@+id/tv_purchase_date"
        />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/_f6706d"
        android:textSize="@dimen/_12sp"
        android:text="￥5000.00"
        android:id="@+id/purchase_order_price"
        android:layout_marginRight="47dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/youjiantou"
        android:layout_marginRight="@dimen/_16dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/MinGrayLightText"
        android:layout_alignEnd="@+id/purchase_order_price"
        android:layout_alignRight="@+id/purchase_order_price"
        android:layout_below="@+id/purchase_order_id"
        android:text="未审核" />
</RelativeLayout>
