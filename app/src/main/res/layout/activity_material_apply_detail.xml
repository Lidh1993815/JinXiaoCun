<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/_eeeeee"
android:orientation="vertical"
tools:context="com.qianmo.jinxiaocun.fu.activity.ReimbursementDetailActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/AddTaskTitleStyle"
            android:layout_gravity="center_vertical"
            android:text="@string/material_used" />

        <TextView
            style="@style/AddTaskTitleStyle"
            android:layout_gravity="center_vertical"
            android:text="用于日常办公" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_material_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

    </android.support.v7.widget.RecyclerView>

    <include
        layout="@layout/progress_detail" />
</LinearLayout>
</ScrollView>
