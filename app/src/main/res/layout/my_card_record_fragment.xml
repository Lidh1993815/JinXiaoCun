<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/_eeeeee"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:minHeight="70dp">

        <TextView
            android:layout_width="@dimen/_38dp"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginLeft="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_16dp"
            android:background="@mipmap/touxiangy"
            android:text="克山"
            android:id="@+id/attendance_name_bg"
            android:textSize="@dimen/_13sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="@dimen/_38dp" />

        <TextView
            style="@style/AddTaskTitleStyle"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_toRightOf="@+id/attendance_name_bg"
            android:layout_marginLeft="@dimen/_16dp"
            android:id="@+id/attendance_name"
            android:text="黄克山"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/AddTaskTitleStyle"
            android:textColor="@color/_8c969f"
            android:textSize="@dimen/_12sp"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_toRightOf="@+id/attendance_name_bg"
            android:layout_below="@+id/attendance_name"
            android:layout_marginLeft="@dimen/_16dp"
            android:text="销售部门"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:minWidth="120dp"
            android:background="@drawable/gray_bg_shape"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/_8dp"
            android:minHeight="@dimen/_25dp"
            android:text="2017-9-26"
            android:paddingLeft="9dp"
            android:drawableRight="@mipmap/xiajiant"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/_16dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/_1dp"
        android:gravity="center_vertical"
        style="@style/ItemHorizontalStyle">

        <TextView
            style="@style/AddTaskTitleStyle"
            android:gravity="center_vertical"
            android:text="@string/attendance_days" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/_9f9f9f"
            android:text="15天"
            android:drawablePadding="@dimen/_16dp"
            android:drawableRight="@mipmap/xiala02"
            android:layout_marginRight="@dimen/_15dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/attendance_days_list"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_marginTop="@dimen/_1dp"
        android:gravity="center_vertical"
        style="@style/ItemHorizontalStyle">

        <TextView
            style="@style/AddTaskTitleStyle"
            android:gravity="center_vertical"
            android:text="@string/lack_card_prompt" />

        <TextView
            style="@style/DropDownTextStyle"
            android:text="2天"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/lack_card_list"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_marginTop="@dimen/_1dp"
        android:gravity="center_vertical"
        style="@style/ItemHorizontalStyle">

        <TextView
            style="@style/AddTaskTitleStyle"
            android:gravity="center_vertical"
            android:text="@string/leave" />

        <TextView
            style="@style/DropDownTextStyle"
            android:text="1天"
           />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/leave_days_list"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_marginTop="@dimen/_1dp"
        android:gravity="center_vertical"
        style="@style/ItemHorizontalStyle">

        <TextView
            style="@style/AddTaskTitleStyle"
            android:gravity="center_vertical"
            android:text="@string/lack_prompt" />

        <TextView
            style="@style/DropDownTextStyle"
            android:text="2天"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/absent_list"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_marginTop="@dimen/_1dp"
        android:gravity="center_vertical"
        style="@style/ItemHorizontalStyle">

        <TextView
            style="@style/AddTaskTitleStyle"
            android:gravity="center_vertical"
            android:text="@string/abnormal_card_prompt" />

        <TextView
            style="@style/DropDownTextStyle"
            android:text="1次" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/abnormal_list"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_marginTop="@dimen/_1dp"
        android:gravity="center_vertical"
        style="@style/ItemHorizontalStyle">

        <TextView
            style="@style/AddTaskTitleStyle"
            android:gravity="center_vertical"
            android:text="@string/desease_leave" />

        <TextView
            style="@style/DropDownTextStyle"
            android:text="1天" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/desease_leave_list"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_marginTop="@dimen/_1dp"
        android:gravity="center_vertical"
        style="@style/ItemHorizontalStyle">

        <TextView
            style="@style/AddTaskTitleStyle"
            android:gravity="center_vertical"
            android:text="@string/thing_leave" />

        <TextView
            style="@style/DropDownTextStyle"
            android:text="2天" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/thing_leave_list"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>
