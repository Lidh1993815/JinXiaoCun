<?xml version="1.0" encoding="utf-8"?>
<com.qianmo.jinxiaocun.fu.widget.ForbiddenSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_eeeeee"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.qianmo.jinxiaocun.fu.activity.TaskNotifyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/_eeeeee"
        android:orientation="vertical"
        tools:context="com.qianmo.jinxiaocun.fu.activity.CardDetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    style="@style/CardDetailText"

                    android:text="@string/card_time" />

                <TextView
                    android:id="@+id/task_title"
                    style="@style/CardDetailText"
                    android:text="2017-6-19" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/_23dp"
                android:layout_marginLeft="@dimen/_16dp"
                android:layout_marginTop="@dimen/_25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    style="@style/CardDetailText"
                    android:text="@string/card_apply_content" />

                <TextView
                    android:id="@+id/task_detail"
                    style="@style/CardDetailText"
                    android:layout_width="wrap_content"
                    android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />
            </LinearLayout>
        </LinearLayout>


        <include layout="@layout/progress_detail" />
        <!-- <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_5dp"
             android:background="@color/white"
             android:orientation="vertical">

             <TextView
                 style="@style/CardDetailText"
                 android:layout_marginLeft="@dimen/_16dp"
                 android:layout_marginTop="@dimen/_16dp"
                 android:text="@string/task_progress" />



            <android.support.v7.widget.RecyclerView
                 android:id="@+id/rv_task_progress_list"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" />
         </LinearLayout>-->
    </LinearLayout>
</com.qianmo.jinxiaocun.fu.widget.ForbiddenSwipeRefreshLayout>

