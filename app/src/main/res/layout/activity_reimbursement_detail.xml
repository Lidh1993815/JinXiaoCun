<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_eeeeee"
    tools:context="com.qianmo.jinxiaocun.fu.activity.ReimbursementDetailActivity">


    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/_eeeeee"
        android:layout_above="@+id/ll_applyDetail_bottomLayout"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_add_reim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/reim_detail_list">

            </android.support.v7.widget.RecyclerView>

            <include layout="@layout/progress_detail" />
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/apply_detail_bottom_layout" />
</RelativeLayout>