<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:minHeight="150dp"
    android:background="@drawable/fu_white_fillet_shap"
    android:layout_height="wrap_content">
    <TextView
        style="@style/MiddleBlackText"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_16dp"
        android:text="@string/commit_check" />
    <TextView
        style="@style/ModdleBlackText"
        android:textColor="@color/_9f9f9f"
        android:layout_marginLeft="@dimen/_23dp"
        android:layout_marginRight="@dimen/_23dp"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginBottom="@dimen/_16dp"
        android:layout_marginTop="@dimen/_16dp"
        android:text="@string/check_alarm" />
    <TextView
        android:layout_width="match_parent"
        android:background="@color/_eeeeee"
        android:layout_height="@dimen/line_height_size" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/cancel"
            android:id="@+id/cancel_action"
            android:layout_marginLeft="@dimen/_8dp"
            style="@style/DialogTextStyle" />
        <TextView
            android:layout_width="@dimen/line_height_size"
            android:background="@color/_eeeeee"
            android:layout_height="match_parent" />
        <TextView
            style="@style/DialogTextStyle"
            android:layout_marginRight="@dimen/_8dp"
            android:id="@+id/confirm_action"
            android:text="@string/confirm"/>
    </LinearLayout>
</LinearLayout>
