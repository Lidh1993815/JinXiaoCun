<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_eeeeee"
    tools:context="com.qianmo.jinxiaocun.fu.activity.ExecuteOpinionActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/ll_applyDetail_bottomLayout"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:minHeight="240dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/tv_advice_content"
                android:layout_width="match_parent"
                android:inputType="textMultiLine"
                android:hint="@string/please_input_advice"
                android:background="@null"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:textColorHint="@color/_9f9f9f"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_applyDetail_bottomLayout"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/agree"
            android:textColor="@color/white"
            android:id="@+id/tv_executeOpinion_agree"
            android:background="@color/colorPrimary"
            style="@style/ApplyDetailBottomTextStyle" />

        <TextView
            android:text="@string/disagree"
            android:textColor="@color/black"
            android:id="@+id/tv_executeOpinion_disagree"
            android:background="@color/white"
            style="@style/ApplyDetailBottomTextStyle" />
    </LinearLayout>
</RelativeLayout>
