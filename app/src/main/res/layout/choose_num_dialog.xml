<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:text="商品01"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_14dp"
        style="@style/ModdleBlackText"
         />
    <TextView
        android:text="规格型号"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10dp"
        style="@style/MinBlackText"
        />
    <TextView
        android:text="输入添加到单据商品的数量"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_8dp"
        style="@style/MinGrayLightText"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_24dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_decrease"
            android:src="@mipmap/xianshao"/>
        <EditText
            android:text="00"
            android:textSize="@dimen/_15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="156dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:id="@+id/et_num"
            android:gravity="center"
            android:minHeight="@dimen/_13dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/img_plus"
            android:layout_height="wrap_content"
            android:src="@mipmap/zenjia"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/fu_primary_fillet_shap"
        android:layout_width="match_parent"
        android:minHeight="@dimen/_40dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:textSize="@dimen/_15sp"
        android:clickable="true"
        android:id="@+id/tv_add"
        android:textColor="@color/white"
        android:text="@string/add"
        android:layout_marginBottom="@dimen/_12dp"
        android:layout_height="wrap_content" />
</LinearLayout>
