<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_5dp"
    android:background="@color/white"
    android:minHeight="180dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_showProgressPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginLeft="@dimen/_16dp"
        android:layout_marginTop="16dp"
        android:text="@string/task_progress"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_startName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="18dp"
        android:text="刘刘"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sp"
        app:layout_constraintStart_toEndOf="@+id/frame_layout"
        app:layout_constraintTop_toBottomOf="@+id/tv_showProgressPrompt" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_38dp"
        android:minWidth="@dimen/_38dp"
        android:id="@+id/frame_layout"
        android:layout_marginTop="@dimen/_15dp"
        android:layout_marginLeft="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_showProgressPrompt">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yuan" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/_12sp"
            android:id="@+id/tv_start_firstName"
            android:text="刘"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sp"
        android:text="发起任务"
        app:layout_constraintStart_toEndOf="@+id/tv_startName"
        app:layout_constraintTop_toBottomOf="@+id/tv_showProgressPrompt" />

    <TextView
        android:id="@+id/tv_startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="12dp"
        android:text="2017-7-7 16:40:30"
        android:textColor="@color/_8c969f"
        app:layout_constraintStart_toEndOf="@+id/frame_layout"
        app:layout_constraintTop_toBottomOf="@+id/tv_startName" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="@dimen/_38dp"
        android:layout_marginTop="3dp"
        android:background="@color/_eeeeee"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="3dp"
        app:layout_constraintTop_toBottomOf="@+id/frame_layout" />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_38dp"
        android:minWidth="@dimen/_38dp"
        android:layout_marginTop="3dp"
        android:id="@+id/frame_layout1"
        android:layout_marginLeft="19dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yuan" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/_12sp"
            android:text="刘"
            android:id="@+id/tv_audit_firstName"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_auditorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="5dp"
        android:text="刘刘"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sp"
        app:layout_constraintStart_toEndOf="@+id/frame_layout1"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/tv_auditStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sp"
        android:text="未审核"
        app:layout_constraintStart_toEndOf="@+id/tv_auditorName"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/tv_auditTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="@dimen/_12dp"
        android:text=""
        android:paddingBottom="24dp"
        app:layout_constraintStart_toEndOf="@id/frame_layout1"
        app:layout_constraintTop_toBottomOf="@+id/tv_auditorName"
        android:textColor="@color/_8c969f" />
</android.support.constraint.ConstraintLayout>